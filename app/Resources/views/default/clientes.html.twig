{% extends 'base.html.twig' %}
{% block title %}
Clientes
{% endblock %}
{% block body %}
<div class="p-4 m-3">
    <table class="table">
        <thead class="table-primary">
            <tr>
                <th scope="col">#</th>
                <th scope="col">DNI</th>
                <th scope="col">Nombre y Apellido</th>
                <th scope="col">Direccion</th>
                <th scope="col">Telefono</th>
            </tr>
        </thead>
        <tbody>
            {% for cliente in clientes %}
            <tr>
                <td>{{cliente.id }}</td>
                <td>{{cliente.dni }}</td>
                <td>{{cliente.nombre }} {{cliente.apellido }}</td>
                <td>{{cliente.direccion }}</td>
                <td>{{cliente.telf }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
        {% if pag> 1  %}
        <li class="page-item">
            <a class="page-link" href="{{ path ('clientes', {pag:pag-1<1?1:pag - 1})}}"> Anterior</a>
        </li>{% endif %}
        {% for i in 1..3 %}
        <li class="page-item"><a class="page-link" href="{{ path ('clientes',{ pag:i} )}}">{{i}}</a></li>
        {% endfor %}
        {% if pag < 3  %}
        <li class="page-item">
            <a class="page-link" href="{{ path ('clientes', {pag:pag+1<=3?pag+1: pag})}}">Siguiente</a>
        </li>
        {% endif %}
    </ul>
</nav>
{% endblock %}

{% block stylesheets %}
<style> </style>
{% endblock %}