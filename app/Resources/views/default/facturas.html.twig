{% extends 'base.html.twig' %}
{% block title %}
Facturas
{% endblock %}
{% block body %}
<div class="p-4 m-3">
    <table class="table">
        <thead class="table-primary">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Fecha</th>
                <th scope="col">Importe</th>
                <th scope="col">id cliente</th>
            </tr>
        </thead>
        <tbody>
            {% for factura in facturas %}
            <tr>
                <td>{{factura.id }}</td>
                <td>{{factura.fecha }}</td>
                <td>{{factura.importe }}</td>
                <td>{{factura.idcliente }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
        {% if pag> 1  %}
        <li class="page-item">
            <a class="page-link" href="{{ path ('facturas', {pag:pag-1<1?1:pag - 1})}}"> Anterior</a>
        </li>{% endif %}
        {% for i in 1..3 %}
        <li class="page-item"><a class="page-link" href="{{ path ('facturas',{ pag:i} )}}">{{i}}</a></li>
        {% endfor %}
        {% if pag < 3  %}
        <li class="page-item">
            <a class="page-link" href="{{ path ('facturas', {pag:pag+1<=3?pag+1: pag})}}">Siguiente</a>
        </li>
        {% endif %}
    </ul>
</nav>

{% endblock %}

{% block stylesheets %}
<style> </style>
{% endblock %}